<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_note_share_wifi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="20dp"
        android:text="@string/note_to_share_wifi"
        android:textColor="#000000" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#CFCFCF" />

    <TextView
        android:id="@+id/tv_share_now"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/share_wifi_listitem"
        android:clickable="true"
        android:gravity="center_horizontal"
        android:padding="15dp"
        android:text="@string/share_now"
        android:textColor="#30a2ea"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#CFCFCF" />

    <TextView

        android:id="@+id/tv_share_latter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/share_wifi_listitem"
        android:clickable="true"
        android:gravity="center_horizontal"
        android:padding="15dp"
        android:text="@string/share_later"
        android:textColor="#30a2ea"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#CFCFCF" />

    <TextView
        android:id="@+id/tv_not_remind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/share_wifi_listitem"
        android:clickable="true"
        android:gravity="center_horizontal"
        android:padding="15dp"
        android:text="@string/not_remind"
        android:textColor="#30a2ea"
        android:textStyle="bold" />
</LinearLayout>
