<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/fl_float_window"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/titleBg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_link_one"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:scrollbarDefaultDelayBeforeFade="@android:integer/config_shortAnimTime"
            android:scrollbars="horizontal"
            android:text=""
            android:textColor="@color/colorBlack"
            android:textSize="7sp"/>
        <TextView
            android:id="@+id/tv_link_two"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:scrollbarDefaultDelayBeforeFade="@android:integer/config_shortAnimTime"
            android:scrollbars="horizontal"
            android:text=""
            android:textColor="@color/colorBlack"
            android:textSize="7sp"/>
        <TextView
            android:id="@+id/tv_link_three"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:scrollbarDefaultDelayBeforeFade="@android:integer/config_shortAnimTime"
            android:scrollbars="horizontal"
            android:text=""
            android:textColor="@color/colorBlack"
            android:textSize="7sp"/>
    </LinearLayout>


    <ImageView
        android:id="@+id/iv_close_notify"
        android:layout_width="20dp"
        android:layout_height="75dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:scaleType="center"
        android:src="@android:color/holo_red_dark"
        android:visibility="gone"/>

</RelativeLayout>
