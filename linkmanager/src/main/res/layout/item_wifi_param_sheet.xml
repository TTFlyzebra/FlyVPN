<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="10dp"
              android:background="#FEFAF9"
              android:orientation="vertical">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="25dp">
        <TextView
            style="@style/NetworkInfoName"
            android:text="wifi信号等级阀值"/>

        <EditText
            android:id="@+id/et_wifi_level_pass_value"
            style="@style/NetworkInfoValueStyle"
            android:hint="wifi信号等级阀值"/>
        <View style="@style/DivideLineHorizontal"/>
        <View style="@style/DivideLineVertical"/>
        <View
            style="@style/DivideLineHorizontal"
            android:layout_gravity="top"/>
    </FrameLayout>


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="25dp">
        <TextView
            style="@style/NetworkInfoName"
            android:text="wifi丢包率阀值"/>

        <EditText
            android:id="@+id/et_wifi_rate_pass_value"
            style="@style/NetworkInfoValueStyle"
            android:hint="wifi丢包率阀值"/>
        <View style="@style/DivideLineHorizontal"/>
        <View style="@style/DivideLineVertical"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="25dp">
        <TextView
            style="@style/NetworkInfoName"
            android:text="手动设置wifi丢包率"/>

        <EditText
            android:id="@+id/et_manual_wifi_packet_loss"
            style="@style/NetworkInfoValueStyle"
            android:hint="手动设置wifi丢包率"/>
        <View style="@style/DivideLineHorizontal"/>
        <View style="@style/DivideLineVertical"/>
    </FrameLayout>


    <FrameLayout
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_height="25dp">
        <TextView
            style="@style/NetworkInfoName"
            android:text="wifi去抖动时间"/>

        <EditText
            android:id="@+id/et_wifi_shake_time"
            style="@style/NetworkInfoValueStyle"
            android:hint="wifi去抖动时间"/>
        <View style="@style/DivideLineHorizontal"/>
        <View style="@style/DivideLineVertical"/>
    </FrameLayout>


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="25dp">
        <TextView
            style="@style/NetworkInfoName"
            android:text="wifi权重"/>

        <EditText
            android:id="@+id/et_wifi_cost_weight"
            style="@style/NetworkInfoValueStyle"
            android:hint="wifi权重"/>
        <View style="@style/DivideLineHorizontal"/>
        <View style="@style/DivideLineVertical"/>
    </FrameLayout>


    <FrameLayout
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_height="25dp">

        <TextView
            style="@style/NetworkInfoName"
            android:text="wifi惩罚时间"/>

        <EditText
            android:id="@+id/et_wifi_forbid_time"
            style="@style/NetworkInfoValueStyle"
            android:hint="wifi惩罚时间"/>

        <View style="@style/DivideLineHorizontal"/>
        <View style="@style/DivideLineVertical"/>
    </FrameLayout>

</LinearLayout>
